<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">Sınav Oluşturma Uygulaması</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">


                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">Anasayfa</a>
                        </li>                      
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-action="SelectExamTitle" asp-controller="Exam">Sınav Oluştur</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-action="ListExams" asp-controller="Exam">Sınavlarımı Listele</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-action="SignOut" asp-controller="Home">Çıkış Yap</a>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-action="Create" asp-controller="Home">Kayıt Ol</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="SignIn" asp-controller="Home">Giriş Yap</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <section>
        <div class="container mt-2">
            @RenderBody()
          
        </div>
        
    </section>


    <script src="\node_modules\bootstrap\dist\js\bootstrap.bundle.min.js"></script>

</body>

</html>
