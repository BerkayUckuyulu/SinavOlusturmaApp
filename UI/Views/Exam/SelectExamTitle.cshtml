@model ExamModel
@{
    Layout = "_Layout";
}
<div class="container mt-4">
    <div class="mt-4">
        <form asp-action="SelectExamTitle" asp-controller="Exam" method="post" class="p-4 w-75 mx-auto">
            <div class="mb-3">
                <select class="form-select bg-secondary text-white" asp-items="@Model.Titles" asp-for="TitleId">
                    <option value="0">Bir Başlık Seçiniz..</option>
                </select>
            </div>
            <div class="mb-3 text-lead">
                <button type="submit" class="btn btn-primary">Başlığı Seç.</button>
            </div>
            <div my-3>
                @if (Model.Content != null)
                {
                    <div class="lead">
                        <textarea rows="10" cols="97" class="text-black bg-light">@Model.Content </textarea>
                        <div class="my-3">
                            <div class="mb-3 text-end">
                                <button type="submit" asp-action="CreateTest" asp-controller="Exam" class="btn btn-secondary">Seçenekleri Oluştur.</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </form>
    </div>
</div>


