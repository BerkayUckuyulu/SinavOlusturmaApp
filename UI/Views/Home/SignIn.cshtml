@using Dtos.Identity
@model UserSignInDto

@{
    Layout = "_Layout";
}



<form asp-action="SignIn" asp-controller="Home" method="post" class="p-4 w-75 mx-auto shadow">
    
    <div class="mb-3">
        <label>Kullanıcı Adı</label>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Şifre</label>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input type="password" asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" asp-for="@Model.RememberMe">
        <label class="form-check-label" asp-for="RememberMe">
            Beni Hatırla
        </label>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit"> Giriş Yap </button>
    </div>
    <div class="text-danger mt-2" asp-validation-summary="ModelOnly">
        
    </div>


</form>